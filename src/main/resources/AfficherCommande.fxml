        <!-- TableView pour afficher les commandes -->
        <TableView fx:id="commandeTable" layoutX="22.0" layoutY="60.0" prefHeight="407.0" prefWidth="654.0">
            <columns>
                <TableColumn fx:id="nomClientColumn" prefWidth="150" text="Nom Client" />
                <TableColumn fx:id="adresseEmailColumn" prefWidth="200" text="Adresse Email" />
                <TableColumn fx:id="totalColumn" prefWidth="146.0" text="Total" />
                <TableColumn fx:id="actionColumn" prefWidth="157.0" text="Actions" />
            </columns>
        </TableView>
    </children>
</AnchorPane>
