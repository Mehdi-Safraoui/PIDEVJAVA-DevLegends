<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<AnchorPane stylesheets="style.css" xmlns:fx="http://javafx.com/fxml" fx:controller="Controllers.ListQuestionController">
    <children>

        <HBox alignment="CENTER" layoutX="0.0" layoutY="25.0" prefWidth="678.0">
        <Label layoutX="14.0" layoutY="20.0" text="Liste des Questions" style="-fx-font-size: 24px; -fx-font-weight: bold;">
            <font>
                <Font name="Arial" size="24"/>
            </font>
        </Label>
        </HBox>

        <TableView fx:id="questionTable" layoutX="14.0" layoutY="64.0" prefHeight="400.0" prefWidth="600.0">
            <columns>
                <TableColumn fx:id="idColumn" text="ID" prefWidth="75.0"/>
                <TableColumn fx:id="questionTextColumn" text="Question" prefWidth="200.0"/>
                <TableColumn fx:id="answerTypeColumn" text="Type de réponse" prefWidth="150.0"/>
                <TableColumn fx:id="pointsColumn" text="Points" prefWidth="75.0"/>
                <!-- Colonne pour les boutons Modifier et Supprimer (gestion via Java uniquement) -->
                <TableColumn fx:id="actionsColumn" text="Actions" prefWidth="150.0"/>
            </columns>
        </TableView>

        <Label fx:id="statusLabel" layoutX="14.0" layoutY="475.0" prefWidth="600.0" text="" />

        <!-- Les boutons Modifier et Supprimer sont maintenant dans les cellules de la TableView -->
        <!-- Ces boutons sont gérés dynamiquement dans le contrôleur -->

    </children>
</AnchorPane>
