<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane stylesheets="styleProduit.css" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/21.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controllers.AjouterProduitController" >


   <children>
      <Label layoutX="50.0" layoutY="30.0" text="Nom Produit:" />
      <TextField fx:id="nomProduitField" layoutX="200.0" layoutY="25.0" prefWidth="200.0" />

      <Label layoutX="50.0" layoutY="80.0" text="Prix Produit:" />
      <TextField fx:id="prixProduitField" layoutX="200.0" layoutY="75.0" prefWidth="200.0" />

      <Label layoutX="50.0" layoutY="130.0" text="Quantité Produit:" />
      <TextField fx:id="quantiteProduitField" layoutX="200.0" layoutY="125.0" prefWidth="200.0" />

      <Label layoutX="50.0" layoutY="180.0" text="Statut Produit:" />
      <ComboBox fx:id="statutComboBox" layoutX="200.0" layoutY="175.0" prefWidth="200.0" />

      <Label layoutX="50.0" layoutY="230.0" text="Catégorie:" />
      <ComboBox fx:id="categorieComboBox" layoutX="200.0" layoutY="225.0" prefWidth="200.0" />

      <Button layoutX="200.0" layoutY="280.0" onAction="#AjouterProduit" text="Ajouter Produit" />
   </children>
</AnchorPane>
