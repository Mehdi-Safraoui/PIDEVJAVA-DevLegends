<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="600.0" prefWidth="647.0" stylesheets="@style.css" xmlns="http://javafx.com/javafx/21.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controllers.ProfilController">
    <StackPane alignment="CENTER" prefHeight="500" prefWidth="800">
        <VBox fx:id="formContainer" alignment="CENTER" prefHeight="429.0" prefWidth="800.0" spacing="20" styleClass="form-container">
            <HBox alignment="CENTER_LEFT" layoutX="30.0" layoutY="10" prefHeight="45.0" prefWidth="465.0" spacing="5">
                <ImageView fx:id="logoImage" fitHeight="50" fitWidth="50" preserveRatio="true" styleClass="logo" />
                <Label styleClass="title" text="InnerBloom" />
            </HBox>
            <!-- Logo + Titre (optionnel) -->
            <HBox alignment="CENTER" spacing="15">
                <ImageView fx:id="profileImageView" fitHeight="80" fitWidth="80" preserveRatio="true" styleClass="image-view" />
            </HBox>

               <!-- Infos utilisateur -->
            <VBox alignment="CENTER" spacing="10">
                <Label fx:id="lblNom" styleClass="label" text="Nom:" />
                <Label fx:id="lblPrenom" styleClass="label" text="Prénom:" />
                <Label fx:id="lblAge" styleClass="label" text="Âge:" />
                <Label fx:id="lblRole" styleClass="label" text="Rôle:" />
                <Label fx:id="lblSpecialite" text="Spécialité:" />
            </VBox>

            <HBox alignment="CENTER" spacing="20">
                <Button fx:id="btnModifier" onAction="#handleModifier" styleClass="button" text="Modifier le profil" />
                <Button fx:id="btnRetour" onAction="#handleRetour" styleClass="button" text="Retour" />
            </HBox>

        </VBox>
    </StackPane>
       <Label styleClass="title" text="Profil Utilisateur" />
</AnchorPane>
