<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controllers.maya.QuizAPIHuggingFaceController" spacing="15" alignment="CENTER" style="-fx-padding: 20;">
    <Label text="Quiz Mental API" style="-fx-font-size: 24px; -fx-font-weight: bold;" />
    <ProgressBar fx:id="progressBar" prefWidth="300" />
    <Label fx:id="timerLabel" text="Temps restant : 5m 0s" style="-fx-font-size: 16px;"/>
    <VBox fx:id="quizContainer" spacing="10" />
    <Button fx:id="submitButton" text="Soumettre" onAction="#handleSubmit" />
    <Label fx:id="resultLabel" style="-fx-font-size: 18px; -fx-text-fill: blue;" />
</VBox>
