<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="Controllers.ParticipationPopup"
            prefHeight="200.0" prefWidth="300.0">
    <VBox spacing="10.0" alignment="CENTER" AnchorPane.topAnchor="20.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0">

        <Label text="Entrez votre email pour participer"/>

        <TextField fx:id="emailField" promptText="Email"/>

        <Button text="Send" onAction="#handleSend"/>
    </VBox>
</AnchorPane>
