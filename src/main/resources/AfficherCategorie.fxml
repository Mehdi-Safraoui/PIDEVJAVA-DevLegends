<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" stylesheets="styleProduit.css" xmlns="http://javafx.com/javafx/21.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controllers.AfficherCategorieController">

    <children>
        <!-- Titre dans HBox avec fond vert -->
        <HBox alignment="CENTER" prefHeight="80.0" prefWidth="600.0" styleClass="title-bar">
            <children>
                <Label styleClass="title" text="Listes des Catégories" textFill="#2b6f3e" />
            </children>
        </HBox>

        <!-- TableView avec style moderne -->
        <TableView fx:id="categorieTable" layoutX="0.0" layoutY="80.0" prefHeight="320.0" prefWidth="600.0" styleClass="custom-table">
            <columns>
                <TableColumn fx:id="nomCategorieColumn" prefWidth="301.0" text="Nom Catégorie" />
                <TableColumn fx:id="actionColumn" prefWidth="298.0" text="Actions" />
            </columns>
        </TableView>
    </children>
</AnchorPane>
