<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="Controllers.ModifierEvenement"
            prefHeight="400.0" prefWidth="600.0"
            stylesheets="style.css">

    <children>
        <Label layoutX="50.0" layoutY="30.0" text="ID de l'événement :" />
        <TextField fx:id="idField" layoutX="220.0" layoutY="25.0" prefWidth="300.0" />

        <Label layoutX="50.0" layoutY="80.0" text="Nouveau titre :" />
        <TextField fx:id="titreField" layoutX="220.0" layoutY="75.0" prefWidth="300.0" />

        <Label layoutX="50.0" layoutY="130.0" text="Nouvelle date :" />
        <DatePicker fx:id="datePicker" layoutX="220.0" layoutY="125.0" prefWidth="300.0" />

        <Label layoutX="50.0" layoutY="180.0" text="Nouveau lieu :" />
        <TextField fx:id="lieuField" layoutX="220.0" layoutY="175.0" prefWidth="300.0" />

        <Label layoutX="50.0" layoutY="230.0" text="Nouveau statut :" />
        <TextField fx:id="statutField" layoutX="220.0" layoutY="225.0" prefWidth="300.0" />

        <Label layoutX="50.0" layoutY="280.0" text="Nouvel ID Formation :" />
        <TextField fx:id="formationIdField" layoutX="220.0" layoutY="275.0" prefWidth="300.0" />

        <Button text="Modifier" layoutX="220.0" layoutY="330.0" prefWidth="300.0"
                onAction="#modifierEvenement" />
    </children>
</AnchorPane>
