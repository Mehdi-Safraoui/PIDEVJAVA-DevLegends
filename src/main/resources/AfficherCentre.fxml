<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.image.ImageView?>

<AnchorPane xmlns="http://javafx.com/javafx/21.0.2"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="Controllers.AfficherCentreController"
            stylesheets="@style.css"
            prefWidth="900" prefHeight="640"
            styleClass="main-pane">

    <children>

        <!-- En-tÃªte avec logo et nom -->
        <HBox alignment="CENTER_LEFT" layoutX="20.0" layoutY="10.0" spacing="10.0">
            <ImageView fx:id="logoImage" fitHeight="50" fitWidth="50" preserveRatio="true" styleClass="logo"/>
            <Label styleClass="title" text="InnerBloom"/>
        </HBox>

        <!-- Titre de section "Nos centres" -->
        <Label text="Nos centres"
               layoutX="20.0" layoutY="70.0"
               styleClass="section-title"/>

        <!-- Cartes dans ScrollPane -->
        <ScrollPane fitToWidth="true" layoutX="20" layoutY="110" prefWidth="860" prefHeight="440"
                    styleClass="card-scroll">
            <FlowPane fx:id="cardsContainer" hgap="30" vgap="30" alignment="CENTER" styleClass="card-container">
                <padding>
                    <Insets top="20" right="20" bottom="20" left="20"/>
                </padding>
            </FlowPane>
        </ScrollPane>

        <!-- Boutons en bas -->
        <HBox alignment="CENTER" layoutY="570" prefWidth="900" spacing="20">
            <Button text="Ajouter Centre" onAction="#handleAjouterCentre"
                    styleClass="btn-green" prefWidth="200"/>
            <Button text="Voir les Packs" onAction="#handleVoirPacks"
                    styleClass="btn-blue" prefWidth="200"/>
            <Button text="Voir les Contrats" onAction="#handleVoirContrats"
                    styleClass="btn-orange" prefWidth="200"/>
        </HBox>

    </children>
</AnchorPane>
