<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="Controllers.mehdi.AfficherAvisFrontController"
            prefWidth="1200" prefHeight="800"
            stylesheets="AvisRecStyle.css">

    <VBox spacing="15" AnchorPane.topAnchor="20" AnchorPane.leftAnchor="20" AnchorPane.rightAnchor="20">

        <ScrollPane fx:id="scrollPane" fitToWidth="true">
            <TilePane fx:id="tilePaneAvis"
                      hgap="10" vgap="10"
                      prefColumns="3"
                      style="-fx-padding: 10;" alignment="CENTER">
            </TilePane>
        </ScrollPane>

        <!-- Nouveau HBox pour les boutons navigation -->
        <HBox fx:id="paginationBox" spacing="10" alignment="CENTER">
            <!-- Contient les boutons Précédent/Suivant  -->
        </HBox>

    </VBox>
</AnchorPane>
