<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="Controllers.mehdi.AfficherAvisFrontController"
            prefWidth="1200" prefHeight="800"
            stylesheets="AvisRecStyle.css">

    <children>
        <fx:include source="../Navbar.fxml" AnchorPane.leftAnchor="0" AnchorPane.topAnchor="0" />

        <VBox spacing="15" AnchorPane.topAnchor="60" AnchorPane.leftAnchor="20" AnchorPane.rightAnchor="20">
            <ScrollPane fx:id="scrollPane" fitToWidth="true">
                <TilePane fx:id="tilePaneAvis" hgap="10" vgap="10"
                          prefColumns="3" style="-fx-padding: 10;" alignment="CENTER"/>
            </ScrollPane>

            <HBox fx:id="paginationBox" spacing="10" alignment="CENTER"/>
        </VBox>
    </children>
</AnchorPane>
